{
  "name": "warsan305-bill-splitter",
  "version": "3.0.0",
  "description": "Real-time collaborative bill splitter for 7 roommates at Warsan 305",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "echo \"No tests specified\" && exit 0",
    "lint": "eslint *.js || exit 0",
    "build": "echo \"No build step required\"",
    "deploy": "echo \"Deploying to Render...\"",
    "health": "curl https://warsan305.onrender.com/health || echo \"Server not running\""
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "bill-splitter",
    "roommate",
    "expense-tracker",
    "real-time",
    "collaborative",
    "socket.io"
  ],
  "author": "Warsan 305 Roommates",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/warsan305-bill-splitter.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/warsan305-bill-splitter/issues"
  },
  "homepage": "https://warsan305.onrender.com",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "helmet": "^7.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "eslint": "^8.53.0"
  },
  "render": {
    "start": "node server.js",
    "runtime": "node",
    "region": "oregon",
    "autoDeploy": true,
    "healthCheckPath": "/health",
    "healthCheckTimeout": 10,
    "plan": "free",
    "env": {
      "NODE_ENV": "production",
      "PORT": "10000"
    }
  },
  "config": {
    "renderUrl": "https://warsan305.onrender.com",
    "socketIoVersion": "4.x",
    "roomId": "warsan305",
    "roommates": 7
  }
}
